{% extends 'base.html.twig' %}

{% block title %}
    Contact
{% endblock %}

{% block body %}

    <form method="post" action="{{ path('app_login') }}" class="bg-gray-300 rounded px-8 pt-6 pb-8 mb-4">
        <label for="email" class="block text-gray-700 font-medium mb-2">Adresse e-mail :</label>
        <input type="email" id="email" name="email" required class="border border-gray-400 p-2 w-full">
        <div class="flex items-center justify-between mt-4">
            <input type="submit" value="Envoyer" class="bg-blue-500 hover:bg-blue-700 text-white font-bold py-2 px-4 rounded focus:outline-none focus:shadow-outline">
        </div>
    </form>

{% endblock %}